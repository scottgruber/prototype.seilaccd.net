    <style type="text/css">
      main {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 1rem;
      }

      .palette {
        border: 1px solid var(--color-brown-dark);
        border-radius: 12px;
        padding: 1rem 1rem 1.5rem;
        background: var(--color-paper);
      }

      .group-title {
        display: block;
        margin: .5rem 0 1rem;
        font-size: var(--font-size-display);
      }

      .swatch-set {
        display: grid;
        grid-template-columns: repeat(9, minmax(120px, 1fr));
        gap: 1rem;
      }

      /* 3-up sets (paper/sand/brown) */
      .swatch-set.is-3 {
        grid-template-columns: repeat(3, minmax(100px, 1fr));
      }

      .swatch {
        display: grid;
        grid-template:
          "chip" 140px
          "meta" auto / 1fr;
        place-items: center;
        border: 1px solid #e5e5e5;
        border-radius: 12px;
        padding: .75rem .75rem 1rem;
        background: #fff;
      }

      .swatch .chip {
        grid-area: chip;
        height: 120px;
        width: 120px;
        border-radius: 50%;
        box-shadow: inset 0 0 0 1px rgba(0, 0, 0, .06);
      }

      .swatch .meta {
        grid-area: meta;
        text-align: center;
        font-size: .85rem;
        line-height: 1.3;
        margin-top: .5rem;
      }

      .swatch h4 {
        margin: .25rem 0 .2rem;
        font-size: .9rem;
        letter-spacing: .02em;
      }

      @media (max-width: 1100px) {
        .swatch-set {
          grid-template-columns: repeat(6, minmax(120px, 1fr));
        }
      }

      @media (max-width: 800px) {
        .swatch-set {
          grid-template-columns: repeat(3, minmax(120px, 1fr));
        }
      }

    </style>
  </head>

